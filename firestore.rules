rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Messages collection - users can read/write messages they're part of
    match /messages/{messageId} {
      allow read, write: if request.auth != null;
    }
    
    // Users collection - users can read all users and write their own data
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Contacts collection - users can manage their own contacts
    match /contacts/{contactId} {
      allow read, write: if request.auth != null;
    }
    
    // Invites collection - authenticated users can create and read invites
    match /invites/{inviteId} {
      allow read, write: if request.auth != null;
    }
  }
}